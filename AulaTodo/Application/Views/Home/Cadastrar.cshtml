@model Entities.ToDo

<div class="card">
    <div class="card-header">
        Cadastrar Tarefas
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Cadastrar", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label>Tarefa</label>
                @Html.TextBoxFor(x => x.Tarefa, new { @class = "form-control" })
            </div>

            <input type="submit" class="btn btn-success btn-sm" />
        }
    </div>
</div>